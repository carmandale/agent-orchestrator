#!/usr/bin/env bash

# Deprecated shim: canonical tf orchestrator now lives in GJ-testflight-release.

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
CANONICAL_REPO="${AO_TF_RELEASE_REPO:-$(cd "$SCRIPT_DIR/.." && pwd)/../GJ-testflight-release}"
CANONICAL_SCRIPT="$CANONICAL_REPO/scripts/tf-release-orchestrate"

if [ ! -x "$CANONICAL_SCRIPT" ]; then
  echo "[tf-release-orchestrate] Canonical script not found or not executable: $CANONICAL_SCRIPT"
  echo "Set AO_TF_RELEASE_REPO to the GJ-testflight-release path before rerunning."
  exit 1
fi

echo "[tf-release-orchestrate] Canonical runner has moved."
echo "Run: \"$CANONICAL_SCRIPT\" \"$@\""
"$CANONICAL_SCRIPT" "$@"
